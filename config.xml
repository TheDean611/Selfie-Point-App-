<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "de.selfie-points.app.dev"
    versionCode = "10" 
    version     = "1.0.0" >  
  <name>Selfie Point</name>
  <description>
    Wir sind für euch auf die Suche gegangen und haben die besten Locations an den interessantesten Sehenswürdigkeiten für eure Selfies und Fotomotive gefunden
  </description>
  <author email="simon@tieck-business.com" href="http://ieck-business.com">
    IECK Business
  </author>
  <content src="index.html"/>
  <gap:platform name="ios" />
  <gap:platform name="android" />
  <plugin name="cordova-plugin-whitelist" version="1"/>

  <!-- plugins -->
  <gap:plugin name="org.apache.cordova.geolocation" version="0.3.10" />
  <gap:plugin name="org.apache.cordova.file" />
  <gap:plugin name="org.apache.cordova.file-transfer" />
  <gap:plugin name="org.apache.cordova.inappbrowser" version="0.5.2" />
  <gap:plugin name="org.apache.cordova.network-information" version="0.2.12" />
  <gap:plugin name="uk.co.workingedge.phonegap.plugin.launchnavigator" source="npm" />
  <gap:plugin name="org.apache.cordova.camera" />
  <gap:plugin name="cordova-plugin-x-socialsharing" source="npm" />

  <!-- preferences -->
  <preference name="KeyboardDisplayRequiresUserAction" value="true"/>
  <preference name="MediaPlaybackRequiresUserAction" value="false"/>
  <preference name="AllowInlineMediaPlayback" value="true"/>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="webviewbounce" value="false"/>
  <preference name="SplashScreen" value="screen"/>
  <preference name="SplashScreenDelay" value="3000"/>
  <access origin="*"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  
  <platform name="android">
    <allow-intent href="market:*"/>
  </platform>

  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
  </platform>

  <!-- android icons and splash screen -->
  <icon src="res/android/icon/drawable-ldpi-icon.png" density="ldpi" gap:platform="android"/>
  <icon src="res/android/icon/drawable-mdpi-icon.png" density="mdpi" gap:platform="android"/>
  <icon src="res/android/icon/drawable-hdpi-icon.png" density="hdpi" gap:platform="android"/>
  <icon src="res/android/icon/drawable-xhdpi-icon.png" density="xhdpi" gap:platform="android"/>
  <icon src="res/android/icon/drawable-xxhdpi-icon.png" density="xxhdpi" gap:platform="android"/>
  <icon src="res/android/icon/drawable-xxxhdpi-icon.png" density="xxxhdpi" gap:platform="android"/>

  <splash src="res/android/splash/drawable-land-ldpi-screen.png" density="land-ldpi" gap:platform="android"/>
  <splash src="res/android/splash/drawable-land-mdpi-screen.png" density="land-mdpi" gap:platform="android"/>
  <splash src="res/android/splash/drawable-land-hdpi-screen.png" density="land-hdpi" gap:platform="android"/>
  <splash src="res/android/splash/drawable-land-xhdpi-screen.png" density="land-xhdpi" gap:platform="android"/>
  <splash src="res/android/splash/drawable-land-xxhdpi-screen.png" density="land-xxhdpi" gap:platform="android"/>
  <splash src="res/android/splash/drawable-land-xxxhdpi-screen.png" density="land-xxxhdpi" gap:platform="android"/>
  <splash src="res/android/splash/drawable-port-ldpi-screen.png" density="port-ldpi" gap:platform="android"/>
  <splash src="res/android/splash/drawable-port-mdpi-screen.png" density="port-mdpi" gap:platform="android"/>
  <splash src="res/android/splash/drawable-port-hdpi-screen.png" density="port-hdpi" gap:platform="android"/>
  <splash src="res/android/splash/drawable-port-xhdpi-screen.png" density="port-xhdpi" gap:platform="android"/>
  <splash src="res/android/splash/drawable-port-xxhdpi-screen.png" density="port-xxhdpi" gap:platform="android"/>
  <splash src="res/android/splash/drawable-port-xxxhdpi-screen.png" density="port-xxxhdpi" gap:platform="android"/>
  
  <!-- ios icons and splash screen -->
  <icon src="res/ios/icon/icon.png" gap:platform="ios" width="57" height="57"/>
  <icon src="res/ios/icon/icon-72.png" gap:platform="ios"  width="72" height="72"/>
  <icon src="res/ios/icon/icon-76.png" gap:platform="ios"  width="76" height="76"/>
  <icon src="res/ios/icon/icon-60@2x.png" gap:platform="ios"  width="120" height="120"/>
  <icon src="res/ios/icon/icon-76@2x.png" gap:platform="ios"  width="152" height="152"/>
  <icon src="res/ios/icon/icon@2x.png" gap:platform="ios"  width="114" height="114"/>
  <icon src="res/ios/icon/icon-72@2x.png" gap:platform="ios"  width="144" height="144"/>

  <splash src="res/ios/splash/Default-568h@2x~iphone.png" width="640" height="1136" gap:platform="ios"/>
  <splash src="res/ios/splash/Default-667h.png" width="750" height="1334" gap:platform="ios"/>
  <splash src="res/ios/splash/Default-736h.png" width="1242" height="2208" gap:platform="ios"/>
  <splash src="res/ios/splash/Default-Landscape-736h.png" width="2208" height="1242" gap:platform="ios"/>
  <splash src="res/ios/splash/Default-Landscape@2x~ipad.png" width="2048" height="1536" gap:platform="ios"/>
  <splash src="res/ios/splash/Default-Landscape~ipad.png" width="1024" height="768" gap:platform="ios"/>
  <splash src="res/ios/splash/Default-Portrait@2x~ipad.png" width="1536" height="2048" gap:platform="ios"/>
  <splash src="res/ios/splash/Default-Portrait~ipad.png" width="768" height="1024" gap:platform="ios"/>
  <splash src="res/ios/splash/Default@2x~iphone.png" width="640" height="960" gap:platform="ios"/>
  <splash src="res/ios/splash/Default~iphone.png" width="320" height="480" gap:platform="ios"/>
  
</widget>